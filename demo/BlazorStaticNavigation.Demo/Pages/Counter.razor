@page "/counter"
@inject NavigationManager NavigationManager

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p>This is a simple parameterless page.</p>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="@(() => currentCount++)">Click me</button>

<hr />

<p>
    <strong>Static Path:</strong> <code>@(Counter.Path)</code>
</p>

<button class="btn btn-secondary" @onclick="@(() => NavigationManager.NavigateTo<Home>())">Back to Home</button>

@code {
    private int currentCount;
}
